#!/usr/bin/env bash

# If this var is set to true later on,
# then crystal will be rebuilt
crystal_changed=false

build_pack_path=$(cd $(dirname $(dirname $0)); pwd)

# Ensure dirs are present
mkdir -p $1 $2 $3

build_path=$(cd $1 && pwd)
cache_path=$(cd $2 && pwd)
env_path=$(cd $3 && pwd)

source ${build_pack_path}/lib/path_funcs.sh
source ${build_pack_path}/lib/misc_funcs.sh
source ${build_pack_path}/lib/crystal_funcs.sh
source ${build_pack_path}/lib/app_funcs.sh

load_config
export_config_vars

check_stack
clean_cache

download_crystal
install_crystal
install_shards
compile_app

post_compile_hook
write_profile_d_script